@model Nyma.Domain.ViewModels.Experience.CreateOrEditExperienceViewModel

@{
    bool isCreate = Model.Id == 0 ? true : false;
}


<form id="ExperienceForm" asp-area="Admin" asp-controller="Experience" asp-action="SubmitExperienceFormModal"
      data-ajax="true" data-ajax-begin="StartLoading()" data-ajax-success="ExperienceFormSubmited">

    <div class="modal-header">
        <h5 class="modal-title">@(isCreate ? "ایجاد" : "ویرایش")</h5>
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">

        <div class="row">
            <div class="col-12">

                @if (!isCreate)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="form-group">
                    <label asp-for="Title"></label>
                    <div class="controls">
                        <input type="text" asp-for="Title" class="form-control">
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <div class="controls">
                        <input type="text" asp-for="StartDate" class="form-control">
                    </div>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <div class="controls">
                        <input type="number" asp-for="EndDate" class="form-control">
                    </div>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Order"></label>
                    <div class="controls">
                        <input type="number" asp-for="Order" class="form-control">
                    </div>
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <div class="controls">
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-bold btn-pure float-right @(isCreate ? "btn-success" : "btn-warning")">
                        @(isCreate ? "ایجاد" : "ویرایش")
                    </button>
                </div>

            </div>
        </div>

    </div>

</form>