@if (
TempData["SuccessMessage"] != null ||
TempData["WarningMessage"] != null ||
TempData["InfoMessage"] != null ||
TempData["ErrorMessage"] != null
)
{

    if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowMessage('پیغام موفقیت', '@TempData["SuccessMessage"]', 'success')
            });
        </script>
    }


    if (TempData["WarningMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowMessage('پیغام اخطار', '@TempData["SuccessMessage"]', 'warning')
            });
        </script>
    }

    if (TempData["InfoMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowMessage('پیغام راهنما', '@TempData["SuccessMessage"]', 'info')
            });
        </script>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowMessage('پیغام خطا', '@TempData["SuccessMessage"]', 'error')
            });
        </script>
    }


}